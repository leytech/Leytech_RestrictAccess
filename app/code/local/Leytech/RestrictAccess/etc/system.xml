<?xml version="1.0"?>
<config>
	<sections>
		<leytech_restrictaccess translate="label">
			<label>Restrict Access</label>
			<tab>leytech</tab>
			<frontend_type>text</frontend_type>
			<sort_order>650</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<about translate="label">
					<label>About</label>
					<sort_order>10</sort_order>
					<frontend_type>text</frontend_type>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<comment>
						<![CDATA[
						<h3>Leytech_RestrictAccess Extension</h3>
						<p>This extension restricts access to the frontend to only users that are logged in to the admin backend. Useful for staging sites or other times where you don't wish the public to browse a site.</p>
						]]>
					</comment>
				</about>
				<settings translate="label">
					<label>Module Configuration</label>
					<sort_order>20</sort_order>
					<frontend_type>text</frontend_type>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<enable_ext translate="label comment">
							<label>Enable extension</label>
							<comment>If this is set to Yes then access to the frontend will be restricted.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable_ext>
						<allowed_ips translate="label comment">
							<label>Allowed IP addresses</label>
							<comment>Comma separated list of IP addresses that will not be restricted.</comment>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</allowed_ips>
						<message translate="label comment">
							<label>Message</label>
							<comment>Will be shown when access is denied.</comment>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</message>
					</fields>
				</settings>
			</groups>
		</leytech_restrictaccess>
	</sections>
</config>