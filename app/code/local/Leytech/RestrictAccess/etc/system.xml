<?xml version="1.0"?>
<config>
	<sections>
		<restrictaccess translate="label" module="ltapi">
			<label>Leytech Restrict Access</label>
			<tab>leytech</tab>
			<frontend_type>text</frontend_type>
			<sort_order>650</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<about translate="label">
					<label>About</label>
					<sort_order>10</sort_order>
					<frontend_type>text</frontend_type>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded> 
					<comment>
						<![CDATA[
						<h3>Leytech_Restrict Access Extension</h3>
						<p>This extension restricts access to the frontend to only users that are logged in to the admin backend. Useful for staging sites or other times where you don't wish the public to browse a site.</p>
						]]>
					</comment>
				</about>
                <settings translate="label">
                    <label>Module Configuration</label>
                    <sort_order>20</sort_order>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enable_ext translate="label comment" module="restrictaccess">
                            <label>Enable extension</label>
                            <comment>If this is set to No then the extensions will be disabled.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_ext>
                    </fields>
                </settings>
            </groups>
		</restrictaccess>
	</sections>
</config>